@{
    //ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutAdminSimple.cshtml";
}

<body class="login no-padding-top">
    <div class="container-fluid">
        @*<div class="brand-logo">
                <img src="images/people/110/guy-5.jpg" alt="guy" />
            </div>*@
        <div class="row">
            <h1>Account Access</h1>
            <div class="col-sm-4 col-sm-offset-4">
                <div class="panel panel-default">
                    <div class="panel-body">
                        @*<div class="alert alert-danger">
                                <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                Invalid User or Password
                            </div>*@
                        <form role="form" action="index.html">
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                    <input type="text" class="form-control" id="username3" placeholder="Username">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-shield"></i></span>
                                    <input type="password" class="form-control" id="inputPassword3" placeholder="Password">
                                </div>
                            </div>
                            <div class="text-center">
                                <a class="btn green-btn" id="loginButton">Login  <i class="fa fa-fw fa-unlock-alt"></i></a>
                            </div>
                        </form>
                    </div>
                </div>
                @*<a href="#" class="forgot-pass">
                        Not A Member?
                        <i class="fa fa-question-circle"></i>

                        Register Here
                    </a>*@

                <div class="row-fluid">
                    <div class="col-xs-12" style="padding-top:15px; font-size:15px;">
                        <span>Not A Member <i class="fa fa-question-circle"></i> <a href="~/Home/Registration"> Register Here</a></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section scripts{
        <script src="~/Scripts/stateside.js"></script>
        <script src="~/Scripts/stateside.services.login.js"></script>
        <script type="text/javascript">


            stateside.page.startUp = function () {

                $('#loginButton').on('click', stateside.page.handlers.login);

            }

            stateside.page.handlers.login = function () {
                event.preventDefault();
                var data = {};
                data.Email = $('#username3').val();
                data.Password = $('#inputPassword3').val();
                console.log('data: ', data);
                stateside.services.login.logmein(data, onSuccess, onError);

            }



            var onSuccess = function () {
                console.log('success');

                window.location.href = "/Home/map";
            }

            var onError = function () {
                console.log('error');
            }


        </script>
    }
</body>
