                </tr>
                <tr>
                    <td>Description</td>
                    <td><p>{{body}}</p></td>
                </tr>
                <tr>
                    <td>Start Date</td>
                    <td>{{startDate}}</td>
                </tr>
                <tr>
                    <td>End Date</td>
                    <td>{{endDate}}</td>
                </tr>
                <tr>
                    <td>Duration</td>
                    <td>3 hours</td>
                </tr>
                <tr>
                    <td>Helpers</td>
                    <td>Anna</td>

                </tr>
            </tbody>
        </table>
    </div>
    <div id="enlist-btn" role="button" class="enlist-btn btn green-btn btn-large">Enlist</div>
    <a href="/Home/map" role="button" class="btn green-btn btn-large">See More Missions</a>
</script>

